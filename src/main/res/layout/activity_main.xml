<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/light_pink"
    >

    <Button
        android:id="@+id/Event_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="683dp"
        android:backgroundTint="@color/brown"
        android:text="@string/Event"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/Event_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="544dp"
        android:src="@drawable/taster"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/Event"/>

    <Button
        android:id="@+id/Event_1"
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/brown"
        android:text="@string/Event1"
        app:layout_constraintBottom_toTopOf="@+id/event_2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/event_2"
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/brown"
        android:text="@string/Event2"
        app:layout_constraintBottom_toTopOf="@+id/event_3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/event_3"
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="268dp"
        android:backgroundTint="@color/brown"
        android:text="@string/Event3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />





</androidx.constraintlayout.widget.ConstraintLayout>