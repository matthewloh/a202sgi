<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.intisuperapp.OldNotes.MainFragment"
        android:label="INTI Superapp"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <argument android:name="EXTRA_TITLE" />
        <argument android:name="EXTRA_DESCRIPTION" />
        <argument
            android:name="EXTRA_ID"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument android:name="EXTRA_PRIORITY" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.example.intisuperapp.OldNotes.AddNoteFragment"
        android:label="INTI Superapp"
        tools:layout="@layout/fragment_add_note">
        <action
            android:id="@+id/action_addNoteFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.intisuperapp.LoginAndRegistration.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.intisuperapp.LoginAndRegistration.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" />
</navigation>