<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.HomeFragment">
    <!-- fragment_home.xml -->

    <ImageButton
        android:id="@+id/eventsButton"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:background="@null"
        android:src="@drawable/eventsimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lostAndFoundButton"
        app:layout_constraintTop_toBottomOf="@+id/discussionsButton" />

    <ImageButton
        android:id="@+id/appointmentsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/appointmentsimage"
        app:layout_constraintBottom_toTopOf="@+id/lostAndFoundButton"
        app:layout_constraintEnd_toStartOf="@+id/discussionsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/lostAndFoundButton"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:background="@null"
        android:src="@drawable/lostandfoundimage"
        app:layout_constraintEnd_toStartOf="@+id/eventsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointmentsButton" />

    <ImageButton
        android:id="@+id/discussionsButton"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/discussionsimage"
        app:layout_constraintBottom_toTopOf="@+id/eventsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/appointmentsButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goToBookingsPageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/go_to_bookings_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="160dp"
        android:text="@string/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToBookingsPageBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>